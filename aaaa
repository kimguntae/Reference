 double maximum = data.UpperQuartile() + 1.5 * data.InterQuartileRange();
            double minimum = data.LowerQuartile() - 1.5 * data.InterQuartileRange();
 
            if (IsRemoveOutlier) data = data.Where(d => d < maximum && d > minimum).ToArray();
 
            this.Series["BoxPlot"].Points.Add(new SeriesPoint(name, new double[] { minimum, maximum, data.UpperQuartile(), data.LowerQuartile() }));
            this.Series["Mean"].Points.Add(new SeriesPoint(name, data.Mean()));
            this.Series["Median"].Points.Add(new SeriesPoint(name, data.Median(), data.Median()));
            if (data.Modes().Length > 0)
            {
                this.Series["Modes"].Points.Add(new SeriesPoint(name, data.Modes()));
            }
            this.Series["Maximum"].Points.Add(new SeriesPoint(name, maximum, maximum));
            this.Series["Minimum"].Points.Add(new SeriesPoint(name, minimum, minimum));
 
            if (data.Max() > maximum) this.Series["MaxOutlier"].Points.Add(new SeriesPoint(name, data.Where(v => v > maximum).ToArray()));
            if (data.Min() < minimum) this.Series["MinOutlier"].Points.Add(new SeriesPoint(name, data.Where(v => v < minimum).ToArray()));
 
            ((RangeBarSeriesView)this.Series["Maximum"].View).BarWidth = 0.2;
            ((RangeBarSeriesView)this.Series["Minimum"].View).BarWidth = 0.2;
